<div class="bgm-container">
  <h1> <%= @event.title %></h1>

  <div id="messages" class="messages">
    <% @event.messages.each do |message| %>
      <%= render "events/message", message: message %>
    <% end %>
  </div>


  <%= simple_form_for [@event, @message], html: {class: "d-flex"} do |f| %>

    <%= f.input :content,
                label: false,
                placeholder: "Votre message",
                wrapper_html: {class: "flex-grow-1"} %>

    <%= f.submit "Envoyer", class: "btn-submit", data: {controller: :messages, turbo_method: :post } %>
  <% end %>

</div>
