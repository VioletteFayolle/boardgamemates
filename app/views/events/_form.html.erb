<%= simple_form_for @event do |f| %>
  <%= f.input :title,
              label: "Titre" %>
  <%= f.input :description,
              as: :text %>
  <%= f.input :capacity,
              label: "Nombre de places",
              as: :integer,
              input_html: { min: 1, type: "number" } %>
  <%= f.input :date,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :time,
              as: :string,
              input_html: { data: { controller: "timepicker" } } %>
  <%= render "map_form", f: f %>

  <h2>Ajouter des Jeux</h2>




  <%= f.button :submit %>
<% end %>
