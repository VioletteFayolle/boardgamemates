<h1>Events#index</h1>

<% @events.each do |event| %>
  <div>
    <h5><%= event.title %></h5>
    <p>Description : <%= event.description %></p>
    <p>Date : <%= event.date %></p>
    <p>Lieu : <%= event.location %></p>
    <p>Places : <%= event.capacity %></p>
    <p>Créé par <%= event.creator.username %></p>
    <%= link_to "Voir le détail", event_path(event) %>
  </div>
  <hr> <!-- horizontal line -->
<% end %>
