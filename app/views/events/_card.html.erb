<div class="block-margin g">
  <% if show_event_creator %>
                   <%# div creator %>
    <%= link_to user_path(event.creator.username), class: "link_to" do %>
      <div class="event-creator ">
        <p>Propos√© par</p>
        <p><%= event.creator.username %></p>
        <%= cl_image_tag(event.creator.photo.key, class: "avatar") %>
      </div>
    <% end %>
                   <%# end %>
  <% end %>
    <%= link_to event_path(event), class:"link-to" do %>
  <div class="card-event">
    <div class='event-infos'>
      <div class="title">
        <h2><%= event.title %></h2>
      </div>
      <div class="elements">
        <div><span><%= event.capacity %> </span><i class="fa-solid fa-user-group"></i></div>
        <div><span> <%= event.date %> </span><i class="fa-solid fa-calendar"></i></div>
        <div><span> <%= event.city %> </span><i class="fa-solid fa-location-dot"></i></div>
      </div>
    </div>

    <% end %>

    <div class="bg-cards">
      <% event.boardgames.each do |boardgame| %>
        <%= link_to boardgame_path(boardgame.name) ,class: "link_to" do %>
          <%= render partial: "boardgames/card", locals: { close: false, boardgame: boardgame} %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
